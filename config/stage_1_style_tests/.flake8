[flake8]
max-line-length = 100
exclude =
    # Ignoring virtual environments
    venv*,
    # Ignoring automatically generated code
    build/

# Defining local imports
application_import_names =
    config,
    lab_5_scrapper,
    lab_6_pipeline

# Filtering comments only regarding imports
select = I

# Calculating number of issues in total
count = True
